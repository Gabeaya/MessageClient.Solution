@model MessageClient.Models.Group;

<h2>Group Details</h2>
<hr/>
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)/h3>

@if(Model.JoinEntities.Count == 0)
{
  <p>This group does not have any messages</p>
}
else
{
  <h4>Messages the group has:</h4>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@join.Message.UserName</li>
  }
  </ul>
}

<p>@Html.ActionLink("Back to groups", "Index")</p>
<p>@Html.ActionLink("Edit group", "Edit", new { id = Model.GroupId })</p>
<p>@Html.ActionLink("Delete group", "Delete", new { id = Model.GroupId })</p>