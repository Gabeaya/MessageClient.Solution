@using MessageClient.Models;

<h1>Groups</h1>

@if (@Model.Count == 0)
{
  <h3>No groups have been added yet!</h3>
}

<ul>
  @foreach(Group group in Model)
  {
    <li>@Html.ActionLink($"{group.Name}", "Details", new { id = group.GroupId})</li>
  }
</ul>

<p>@Html.ActionLink("Add new group", "Create")</p>
<p>@Html.ActionLink("Home","Index","Messages")</p>